{
    "manifest_version": 3,
    "name": "Rapid",
    "version": "0.1",
    "description": "Chrome DevTools Extension for Rapid",
    "action": {
        "default_icon": "rapid_favicon.svg"
    },
    "devtools_page": "devtools.html",
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": ["scripting"],
    "host_permissions": [
        "*://*/*"
    ]
}