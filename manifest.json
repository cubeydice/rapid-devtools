{
    "manifest_version": 3,
    "name": "Rapid",
    "description": "Chrome DevTools Extension for Rapid",
    "version": "0.1",
    "icons": {
        "16": "assets/rapid_favicon.png",
        "48": "assets/rapid_icon_48.png"
    },
    "devtools_page": "frontend/devtools.html",
    "permissions": ["scripting", "activeTab", "webNavigation", "tabs"],
    "host_permissions": [
        "http://127.0.0.1:8080/*",
        "https://rapideditor.org/*"
    ],
    "background": {
        "service_worker": "service_worker.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "all_frames": true,
            "run_at": "document_end"
        }
    ]
}