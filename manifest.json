{
    // Comments are accepted in the manifest, even though it is JSON.
    "manifest_version": 3,
    "name": "Rapid",
    "description": "Chrome DevTools Extension for Rapid",
    "version": "0.1",
    //SVG files are not supported
    "icons": {
        "16": "rapid_favicon.png"
    },
    "devtools_page": "html/devtools.html",
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": ["scripting"],
    "host_permissions": [
        "http://127.0.0.1:8080/*",
        "https://rapideditor.org/*"
    ],

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content-script.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["script.js"],
            "matches": ["<all_urls>"]
        }
    ]
}